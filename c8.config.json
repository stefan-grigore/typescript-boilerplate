{
  "reporter": ["text", "html", "lcovonly"],
  "report-dir": "coverage",
  "all": true,
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.d.ts",
    "src/**/__tests__/**",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "features/**",
    "**/features/**",
    "scripts/**",
    "node_modules/**"
  ],
  "excludeAfterRemap": true,
  "extension": [".ts"]
}
